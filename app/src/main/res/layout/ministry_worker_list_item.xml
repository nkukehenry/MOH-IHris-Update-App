<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data class="MinWorkerListBinding">
        <variable
            name="person"
            type="com.moh.ihrisupdatetool.db.entities.MinistryWorkerEntity"
            />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="@dimen/list_item_card_height"
            android:layout_margin="@dimen/list_item_margin">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="10dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="@dimen/list_item_icon_width"
                    android:src="@drawable/min_worker"
                    android:layout_gravity="center"
                    android:layout_height="@dimen/list_item_icon_height"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@{ person.fullName }"
                        android:layout_gravity="center_vertical"
                        android:textSize="@dimen/item_title_text_size"
                        android:paddingLeft="@dimen/menu_item_padding"
                        android:textStyle="bold"
                        android:padding="5dp"
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:text="@{person.phone}"
                        android:padding="5dp"
                        android:textSize="@dimen/item_title_text_size"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</layout>

